{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/components/*": ["./src/components/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/features/*": ["./src/features/*"],
      "@/types/*": ["./src/types/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/app/*": ["./src/app/*"],
      
      // UI Component Path Mappings
      "@ui/*": ["./src/shared/ui/components/*"],
      "@ui/forms": ["./src/shared/ui/components/Forms"],
      "@ui/display": ["./src/shared/ui/components/Display"],
      "@ui/layout": ["./src/shared/ui/components/Layout"],
      "@ui/feedback": ["./src/shared/ui/components/Feedback"],
      "@ui/navigation": ["./src/shared/ui/components/Navigation"],
      "@ui/theme": ["./src/shared/ui/theme"],
      
      // EVC Workspace Packages
      "@evc/shared-api": ["../../packages/shared/api/src/index.ts"],
      "@evc/shared-types": ["../../packages/shared/types/src/index.ts"],
      "@evc/design-tokens": ["../../packages/design/tokens/src/index.ts"],
      "@evc/shared-store": ["../../packages/shared/store/src/index.ts"],
      "@evc/shared-utils": ["../../packages/shared/utils/src/index.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../../packages/shared/api"
    }
  ]
}
