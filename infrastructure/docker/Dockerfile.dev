# Development Dockerfile - Optimized for NX
FROM node:20-alpine AS development

RUN apk add --no-cache libc6-compat git

WORKDIR /app

# Copy NX workspace configuration
COPY package*.json ./
COPY nx.json ./
COPY tsconfig*.json ./

# Copy all workspace package.json files for proper dependency resolution
COPY packages/app/admin/package.json ./packages/app/admin/
COPY packages/shared/api/package.json ./packages/shared/api/
COPY packages/shared/types/package.json ./packages/shared/types/
COPY packages/shared/store/package.json ./packages/shared/store/
COPY packages/shared/utils/package.json ./packages/shared/utils/
COPY packages/design/tokens/package.json ./packages/design/tokens/

# Install dependencies
RUN npm ci --legacy-peer-deps

# Copy source code
COPY . .

# Set development environment
ENV NODE_ENV=development \
    NEXT_TELEMETRY_DISABLED=1 \
    NX_DAEMON=true \
    NX_CLOUD_DISTRIBUTED_EXECUTION=false

EXPOSE 3000

# Start development server using NX
CMD ["npx", "nx", "dev", "@evc/app-admin", "--host", "0.0.0.0"] 