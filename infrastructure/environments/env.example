# EVC Admin Panel - Environment Variables
# Bu dosyayı kopyalayıp .env.local (development) veya .env.production (production) olarak kaydedin

# ======================
# Deployment Environment  
# ======================
NODE_ENV=production
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# ======================
# API Configuration
# ======================
# Ana API base URL
NEXT_PUBLIC_API_BASE_URL=https://api-server.com/api
# Alternatif development API
# NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# API timeout (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# ======================
# Authentication
# ======================
# JWT secret key (production'da mutlaka değiştirin!)
NEXTAUTH_SECRET=super-secret-jwt-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# Session timeout (seconds)
NEXT_PUBLIC_SESSION_TIMEOUT=3600

# ======================
# Database Configuration
# ======================
DATABASE_URL=postgresql://user:password@localhost:5432/evc_admin
# Redis for caching (opsiyonel)
REDIS_URL=redis://localhost:6379

# ======================
# External Services
# ======================
# Email service
SMTP_HOST=smtp.email-provider.com
SMTP_PORT=587
SMTP_USER=email@company.com
SMTP_PASS=email-password

# File upload service
AWS_ACCESS_KEY_ID=aws-access-key
AWS_SECRET_ACCESS_KEY=aws-secret-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=evc-admin-uploads

# ======================
# Monitoring & Analytics
# ======================
# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://sentry-dsn@sentry.io/project-id

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ======================
# Feature Flags
# ======================
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# ======================
# Security
# ======================
# CORS origins (virgülle ayrılmış)
CORS_ORIGINS=http://localhost:3000,https://domain.com

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ======================
# Development Only
# ======================
# Mock data kullan (development için)
NEXT_PUBLIC_USE_MOCK_DATA=false

# Debug API calls
NEXT_PUBLIC_DEBUG_API=false 