{
  "name": "@evc/ui-components",
  "version": "1.0.0",
  "description": "UI component library for EV Charging platform",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./primitives": {
      "development": "./src/primitives/index.ts",
      "types": "./dist/primitives/index.d.ts",
      "import": "./dist/primitives/index.js",
      "default": "./dist/primitives/index.js"
    },
    "./composite": {
      "development": "./src/composite/index.ts",
      "types": "./dist/composite/index.d.ts",
      "import": "./dist/composite/index.js",
      "default": "./dist/composite/index.js"
    },
    "./layout": {
      "development": "./src/layout/index.ts",
      "types": "./dist/layout/index.d.ts",
      "import": "./dist/layout/index.js",
      "default": "./dist/layout/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@evc/design-tokens": "*",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  }
} 