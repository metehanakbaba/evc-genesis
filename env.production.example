# EVC Admin Panel - Production Environment
# Bu dosyayı .env.production olarak kaydedin ve değerlerinizi güncelleyin

NODE_ENV=production
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# API Configuration - PRODUCTION DEĞERLERLE DEĞİŞTİRİN
NEXT_PUBLIC_API_BASE_URL=https://api.domain.com/v1
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication - GÜVENLİK İÇİN DEĞİŞTİRİN
NEXTAUTH_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING
NEXTAUTH_URL=https://admin.domain.com

# Database - PRODUCTION DATABASE BILGILERINI YAZIN
DATABASE_URL=postgresql://username:password@db-host:5432/evc_production

# Security
CORS_ORIGINS=https://admin.domain.com,https://domain.com
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW_MS=900000

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=https://production-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_GA_ID=G-PRODUCTION-GA-ID

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_USE_MOCK_DATA=false
NEXT_PUBLIC_DEBUG_API=false

# File Uploads
AWS_ACCESS_KEY_ID=production-aws-key
AWS_SECRET_ACCESS_KEY=production-aws-secret
AWS_REGION=eu-west-1
AWS_S3_BUCKET=evc-admin-production-uploads

# Email Service
SMTP_HOST=smtp.provider.com
SMTP_PORT=587
SMTP_USER=admin@domain.com
SMTP_PASS=secure-email-password 