{
  "testRunner": {
    "args": {
      "$0": "jest",
      "config": "./jest.config.ts"
    },
    "jest": {
      "setupTimeout": 120000
    }
  },
  "apps": {
    "ios.debug": {
      "type": "ios.app",
      "build": "cd ../apps/ios && xcodebuild -workspace Apps.xcworkspace -scheme Apps -configuration Debug -sdk iphonesimulator -destination 'platform=iOS Simulator,name=iPhone 15 Plus' -derivedDataPath ./build -quiet",
      "binaryPath": "../apps/ios/build/Build/Products/Debug-iphonesimulator/Apps.app"
    },
    "ios.release": {
      "type": "ios.app",
      "build": "cd ../apps/ios && xcodebuild -workspace Apps.xcworkspace -scheme Apps -configuration Release -sdk iphonesimulator -destination 'platform=iOS Simulator,name=iPhone 15 Plus' -derivedDataPath ./build -quiet",
      "binaryPath": "../apps/ios/build/Build/Products/Release-iphonesimulator/Apps.app"
    },

    "ios.local": {
      "type": "ios.app",
      "build": "npx nx run apps:build --platform ios --profile preview --wait --local --no-interactive --output=../apps/dist/Apps.tar.gz",
      "binaryPath": "../apps/dist/Apps.app"
    },

    "android.debug": {
      "type": "android.apk",
      "build": "cd ../apps/android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug",
      "binaryPath": "../apps/android/app/build/outputs/apk/debug/app-debug.apk"
    },
    "android.release": {
      "type": "android.apk",
      "build": "cd ../apps/android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release",
      "binaryPath": "../apps/android/app/build/outputs/apk/release/app-release.apk"
    },

    "android.local": {
      "type": "android.apk",
      "build": "npx nx run apps:build --platform android --profile preview --wait --local --no-interactive --output=../apps/dist/Apps.apk",
      "binaryPath": "../apps/dist/Apps.apk"
    },

  },
  "devices": {
    "simulator": {
      "type": "ios.simulator",
      "device": {
        "type": "iPhone 15 Plus"
      }
    },
    "emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "Pixel_4a_API_30"
      }
    }
  },
  "configurations": {
    "ios.sim.release": {
      "device": "simulator",
      "app": "ios.release"
    },
    "ios.sim.debug": {
      "device": "simulator",
      "app": "ios.debug"
    },

    "ios.sim.local": {
      "device": "simulator",
      "app": "ios.local"
    },

    "android.emu.release": {
      "device": "emulator",
      "app": "android.release"
    },
    "android.emu.debug": {
      "device": "emulator",
      "app": "android.debug"
    },

    "android.emu.local": {
      "device": "emulator",
      "app": "android.local"
    },

  }
}
