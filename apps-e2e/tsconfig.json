{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "sourceMap": false,
    "outDir": "out-tsc/detox",
    "allowJs": true,
    "types": [
      "node",
      "jest",
      "detox"
    ],
    "rootDir": "src",
    "tsBuildInfoFile": "out-tsc/detox/tsconfig.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "test-output"
  ]
}
