{
  "name": "@evc/workspace",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "nx dev @evc/app-admin",
    "dev:admin": "nx dev @evc/app-admin",
    "serve:admin": "nx serve @evc/app-admin",
    "mobile:start": "nx start mobile-app",
    "mobile:ios": "nx ios mobile-app",
    "mobile:android": "nx android mobile-app",
    "mobile:build:dev": "cd mobile-app && eas build --profile development",
    "mobile:build:preview": "cd mobile-app && eas build --profile preview",
    "mobile:build:prod": "cd mobile-app && eas build --profile production",
    "mobile:submit:ios": "cd mobile-app && eas submit --platform ios",
    "mobile:submit:android": "cd mobile-app && eas submit --platform android",
    "mobile:update:prod": "cd mobile-app && eas update --branch production",
    "build": "nx run-many --target=build --all --parallel=3",
    "build:admin": "nx build @evc/app-admin",
    "build:shared": "nx run-many --target=build --projects=@evc/shared-api,@evc/shared-types,@evc/shared-store,@evc/shared-utils,@evc/design-tokens --parallel=5",
    "build:affected": "nx affected --target=build --parallel=3",
    "test": "nx run-many --target=test --all --parallel=3",
    "test:affected": "nx affected --target=test --parallel=3",
    "test:watch": "nx run-many --target=test --all --watch",
    "typecheck": "nx run-many --target=typecheck --all --parallel=3",
    "typecheck:affected": "nx affected --target=typecheck --parallel=3",
    "lint": "nx run-many --target=lint --all --parallel=3",
    "lint:affected": "nx affected --target=lint --parallel=3",
    "lint:fix": "nx run-many --target=lint --all --parallel=3 --configuration=fix",
    "format": "nx run-many --target=format --all --parallel=3",
    "format:affected": "nx affected --target=format --parallel=3",
    "docker:build": "./docker-build.sh production",
    "docker:build:prod": "./docker-build.sh production evc-admin:prod",
    "docker:build:dev": "./docker-build.sh development evc-admin:dev",
    "docker:run": "nx docker:run @evc/app-admin",
    "docker:run:prod": "nx docker:run @evc/app-admin --configuration=production",
    "docker:run:dev": "nx docker:run @evc/app-admin --configuration=development",
    "docker:compose": "nx docker:compose @evc/app-admin",
    "docker:compose:dev": "nx docker:compose @evc/app-admin --configuration=dev",
    "graph": "nx graph",
    "clean": "nx reset && rm -rf node_modules/.nx/cache",
    "clean:builds": "nx run-many --target=clean --all --parallel=3",
    "affected": "nx affected",
    "ci:prepare": "npm ci --legacy-peer-deps",
    "ci:build": "nx affected --target=build --parallel=3 --base=origin/main",
    "ci:test": "nx affected --target=test --parallel=3 --coverage --base=origin/main",
    "ci:quality": "nx affected --target=lint,typecheck --parallel=3 --base=origin/main",
    "migration:dry": "nx migrate latest --dry-run",
    "migration:run": "nx migrate latest && npm install && nx migrate --run-migrations",
    "workspace:info": "nx show projects",
    "workspace:validate": "nx run-many --target=build,test,typecheck --all --parallel=3"
  },
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/vite": "^4.1.11",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@nx/jest": "21.2.1",
    "@nx/js": "21.2.1",
    "@nx/react": "21.2.1",
    "@nx/vite": "21.2.1",
    "@nx/web": "21.2.1",
    "@nx/workspace": "21.2.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "~6.6.3",
    "@testing-library/react": "16.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.0",
    "ajv": "^8.0.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "nx": "21.2.1",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.8.2",
    "vite": "^6.0.0",
    "vite-plugin-dts": "~4.5.0",
    "vitest": "^3.0.0"
  },
  "workspaces": [
    "packages/app/*",
    "packages/shared/*",
    "packages/design/*"
  ]
}
